{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"outDir": "dist",

		"sourceMap": true,
		"noImplicitAny": true,
		"skipLibCheck": true,

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
